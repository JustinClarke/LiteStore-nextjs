import { motion, useAnimation } from "framer-motion";

import { useInView } from "react-intersection-observer";


	//user interaction
	const control = useAnimation()
	const [ref, inView] = useInView({ threshold: 0.2 })

	useEffect(() => {
		if (inView) {
			control.start("visible");
		} else {
			control.start("hidden");
		}
	}, [control, inView]);

	//animations
	const fadeIn = {
		hidden: {
			scale: .8,
			opacity: 0
		},
		visible: {
			scale: 1,
			opacity: 1,
			transition: {
				delay: 0, duration: 1, ease: 'easeInOut'
			}
		}
	}
	const delayedFadeIn = {
		hidden: {
			scale: .8,
			opacity: 0
		},
		visible: {
			scale: 1,
			opacity: 1,
			transition: {
				delay: 1, duration: 1, ease: 'easeInOut'
			}
		}
	}